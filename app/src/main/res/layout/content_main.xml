<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="eu.rafalolszewski.simplyweather.views.activities.MainActivity"
    tools:showIn="@layout/activity_main"
    >

    <fragment
        android:id="@+id/fragment_search"
        android:name="eu.rafalolszewski.simplyweather.views.fragments.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_search"
        />

    <fragment
        android:id="@+id/fragment_content"
        android:name="eu.rafalolszewski.simplyweather.views.fragments.WeatherBodyFragment"
        android:layout_below="@+id/fragment_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_main"
        />

    <fragment
        android:id="@+id/fragment_footer"
        android:name="eu.rafalolszewski.simplyweather.views.fragments.CurrentCityFooterFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_footer"
        />

</RelativeLayout>
